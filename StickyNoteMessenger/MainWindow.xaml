<Window x:Class="StickyNoteMessenger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sticky Note Messenger" 
        Height="400" Width="300"
        MinHeight="250" MinWidth="200"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="True"
        KeyDown="Window_KeyDown"
        MouseDown="Window_MouseDown">
    
    <!-- Main container with sticky note appearance -->
    <Border Name="MainBorder" 
        Background="#FFFFE1" 
        BorderBrush="#E6D659" 
        BorderThickness="1"
        CornerRadius="3"
        Margin="5">
    
    <!-- Drop shadow effect -->
    <Border.Effect>
        <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="3" Opacity="0.3"/>
    </Border.Effect>
    
    <!-- Main content grid -->
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <!-- Header static text -->
            <RowDefinition Height="Auto"/>
            <!-- Separator line -->
            <RowDefinition Height="Auto"/>
            <!-- Message area (expandable) -->
            <RowDefinition Height="*"/>
            <!-- Separator line -->
            <RowDefinition Height="Auto"/>
            <!-- Footer static text -->
            <RowDefinition Height="Auto"/>
            <!-- Input area -->
            <RowDefinition Height="Auto"/>
            <!-- Status bar -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- HEADER: Static work notes with notification badge -->
        <Grid Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Name="HeaderText"
                       Text="Project Meeting Notes - Dec 2024"
                       FontFamily="Segoe UI" 
                       FontSize="11" 
                       FontWeight="Bold"
                       Foreground="#2C5234"/>
            
            <!-- NOTIFICATION BADGE -->
            <Border Name="NotificationBadge"
                    Background="#FF4444"
                    CornerRadius="8"
                    Width="16"
                    Height="16"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,-5,-5,0"
                    Visibility="Collapsed">
                <TextBlock Name="NotificationCount"
                           Text="1"
                           Foreground="White"
                           FontSize="9"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>
        </Grid>
        
        <!-- Header separator -->
        <Rectangle Grid.Row="1" 
                   Height="1" 
                   Fill="#D4C564" 
                   Margin="0,0,0,8"/>
        
        <!-- MESSAGE AREA: Scrollable content -->
        <ScrollViewer Grid.Row="2" 
                      Name="MessageScrollViewer"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="0,0,0,8"
                      ScrollChanged="MessageScrollViewer_ScrollChanged">
            <TextBlock Name="MessagesTextBlock"
                       FontFamily="Segoe UI"
                       FontSize="10"
                       Foreground="#2C5234"
                       TextWrapping="Wrap"
                       Text="• Check requirements doc&#x0a;• TODO: 09:15 - Review specs&#x0a;• ACTION ITEM: 09:30 - Follow up&#x0a;• TODO: 10:00 - Testing phase"/>
        </ScrollViewer>
        
        <!-- Footer separator -->
        <Rectangle Grid.Row="3" 
                   Height="1" 
                   Fill="#D4C564" 
                   Margin="0,0,0,8"/>
        
        <!-- FOOTER: Status text -->
        <TextBlock Grid.Row="4" 
                   Name="StatusText"
                   Text="Ready"
                   FontFamily="Segoe UI" 
                   FontSize="10" 
                   FontStyle="Italic"
                   Foreground="#5A5A5A"
                   Margin="0,0,0,8"/>
        
        <!-- INPUT AREA: Text box for typing -->
        <TextBox Grid.Row="5"
                 Name="InputTextBox"
                 MinHeight="30"
                 MaxHeight="60"
                 FontFamily="Segoe UI"
                 FontSize="10"
                 Foreground="#2C5234"
                 Background="Transparent"
                 BorderBrush="#D4C564"
                 BorderThickness="1"
                 Padding="4"
                 TextWrapping="Wrap"
                 AcceptsReturn="False"
                 Text="Type action item..."
                 GotFocus="InputTextBox_GotFocus"
                 KeyDown="InputTextBox_KeyDown"
                 IsEnabled="True"
                 Margin="0,0,0,5"/>
        
        <!-- CONNECTION INDICATOR: Just a small dot -->
        <Grid Grid.Row="6">
            <Ellipse Name="ConnectionIndicator"
                     Width="6"
                     Height="6"
                     Fill="#CCCCCC"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Center"
                     ToolTip="Connection status"/>
        </Grid>
    </Grid>
</Border>
</Window>